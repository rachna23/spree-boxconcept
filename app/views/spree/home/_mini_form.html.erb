
<%= form_tag new_booking_path(), :method => 'get' do %>
    <p>
       <%= label_tag t(:post_code) %>
       <%= text_field_tag(:post_code) %>
       <%= label_tag t(:pick_up) %>
       <%= text_field_tag(:pick_date) %>
       <%= label_tag t(:dest) %>
       <%= text_field_tag(:dest_code) %>
       <%= label_tag t(:deli_date) %>
       <%= text_field_tag(:del_date)%>
       <%= label_tag t(:no_of_boxes) %>
       <%= text_field_tag(:volume) %>
       <%= submit_tag "Quote"%>
    </p>
<% end %>

<script type="text/javascript">

$(document).ready(function() {

  jQuery("#pick_date").datetimepicker({

    weekStart: 1,
    todayBtn:  1,
    autoclose: 1,
    todayHighlight: 1,
    startView: 2,
    forceParse: 0,
    minuteStep:15
    });
  jQuery("#del_date").datetimepicker({
     
    weekStart: 1,
    todayBtn:  1,
    autoclose: 1,
    todayHighlight: 1,
    startView: 2,
    forceParse: 0,
    minuteStep:15
    });
});

</script> 